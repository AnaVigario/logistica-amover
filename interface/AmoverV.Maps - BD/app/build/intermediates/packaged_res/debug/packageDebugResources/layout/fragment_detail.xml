<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.tasks.TasksFragment" android:tag="layout/fragment_detail_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">




        <TextView
            android:id="@+id/task_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green_500"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            tools:text="4" />

        <ImageView
            android:id="@+id/circle_task"
            src="@drawable/circle"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="@id/task_id_text"
            android:layout_marginEnd="1dp" />

        <ImageView
            android:id="@+id/arrow_image"
            android:layout_width="36dp"
            android:layout_height="63dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/baseline_arrow" />

        <TextView
            android:id="@+id/task_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/task_id_text"
            tools:text="2710-321 Rua das Pedrinhas" />

        <LinearLayout
            android:id="@+id/linear_layout_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="25dp"
            android:layout_below="@+id/task_address_text">


            <TextView
                android:id="@+id/task_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="Recolha" />

            <ImageView
                android:id="@+id/rule_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rule" />

            <TextView
                android:id="@+id/task_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/rule_image"
                android:textSize="15sp"
                tools:text="UTAD" />

        </LinearLayout>


        <TextView
            android:id="@+id/task_timewindow_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@id/linear_layout_task"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="16dp"
            tools:text="No specific time windows" />

        <TextView
            android:id="@+id/task_note_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@+id/task_timewindow_text"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="16dp"
            tools:text="teste" />

        <TextView
            android:id="@+id/task_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@+id/task_note_text"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="16dp"
            tools:text="09:00:00" />



        <LinearLayout
            android:id="@+id/linear_layout_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="25dp"
            android:layout_below="@id/task_time_text">

            <TextView
                android:id="@+id/task_latitude_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="41.29858613918125" />

            <TextView
                android:id="@+id/task_longitude_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/task_latitude_text"
                android:layout_marginStart="20dp"
                android:textSize="15sp"
                tools:text="-7.742791387321814" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#BAD5BA"
            android:layout_below="@id/linear_layout_latitude"/>


    </RelativeLayout>


         