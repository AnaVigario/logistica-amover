<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/teal_700"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        tools:context=".ui.tasks.TasksFragment">


        <TextView
            android:id="@+id/task_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/green_500"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:text="4" />


        <TextView
            android:id="@+id/task_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_id_text"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="2710-321 Rua das Pedrinhas" />

        <LinearLayout
            android:id="@+id/linear_layout_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task_address_text"
            android:layout_marginStart="25dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/task_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="Recolha" />

            <ImageView
                android:id="@+id/rule_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rule" />

            <TextView
                android:id="@+id/task_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/rule_image"
                android:textSize="15sp"
                tools:text="UTAD" />

        </LinearLayout>


        <TextView
            android:id="@+id/task_timewindow_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_layout_task"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="16dp"
            android:textSize="15sp"
            tools:text="No specific time windows" />

        <TextView
            android:id="@+id/task_note_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task_timewindow_text"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="16dp"
            android:textSize="15sp"
            tools:text="teste" />

        <TextView
            android:id="@+id/task_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task_note_text"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="16dp"
            android:textSize="15sp"
            tools:text="09:00:00" />


        <LinearLayout
            android:id="@+id/linear_layout_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_time_text"
            android:layout_marginStart="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/task_latitude_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="41.29858613918125" />

            <TextView
                android:id="@+id/task_longitude_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/task_latitude_text"
                android:layout_marginStart="20dp"
                android:textSize="15sp"
                tools:text="-7.742791387321814" />

        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>


